<%= link_to book do %>
<div class="column is-one-quarter">
<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <% if book.image.present? %>
      <%= image_tag book.image %>
      <% end %>

    </figure>
  </div>
  <div class="card-content">
    <div class="media">

      <div class="media-content">
        <p class="title is-4"><%= link_to book.title, book %></p>

      </div>
    </div>

    <div class="content">
      <p>
      <strong>Price: </strong>
      <%= number_to_currency book.price / 100.0 %>
      </p>

    </div>
    <div>
    <% if cart.include?(book) %>
      <%= button_to cart_path(book), class: "button is-primary", method: :delete do %>
      Remove from Cart
      <% end %>
    <% else %>
      <%= form_with url: cart_index_path, method: :post do %>
        <%= hidden_field_tag(:id, book.id)%>
        <%= button_tag 'Add to Cart', class: "button is-primary"%>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
</div>
<% end %>

